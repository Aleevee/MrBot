import java.util.*;

public class rockPaperScissors {
    public Object main;

    public static void main(String[] args) {

        Scanner myObj = new Scanner(System.in);
        System.out.println("enter a message");
        String newMessage = myObj.nextLine();

        String messageRock = "rock" ;
        String messagePaper = "paper";
        String messageScissors = "scissors";
        String[] output = new String[]{"rock", "paper", "scissors"};
        Random random = new Random();
        int rand = random.nextInt(3);

        switch (newMessage) {
            case "rock", "Rock", "Paper", "Scissors",  "paper", "scissors" -> {
                System.out.println(output[random.nextInt(3)]);

                if (newMessage.equals(messageRock) && output[rand].equals(messageRock)) {
                    System.out.println("It's a tie!");

                } else if (newMessage.equals(messagePaper) && output[rand].equals(messagePaper)) {
                    System.out.println("It's a tie!");

                } else if (newMessage.equals(messageScissors) && output[rand].equals(messageScissors)) {
                    System.out.println("It's a tie!");

                }


            }
        }
    }
}


