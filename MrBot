import java.util.*;

    public class MrBot {
        public static void main(String[] args) {

            Scanner scan = new Scanner(System.in);
            System.out.println("What do you want to do?");
            String functionName = scan.nextLine();

                switch (functionName)  {
                    case "help", "Help" -> System.out.println("Commands include: \"rock, paper, scissors\", 8-ball, and calculator");
                    case "rock, paper, scissors", "Rock, Paper, Scissors" -> {
                        rockPaperScissors rock = new rockPaperScissors();
                        System.out.print(rock.main);
                    }
                    case "8-ball", "8-Ball" -> {
                        System.out.println("What is your question");
                        eightBall eight = new eightBall();
                        System.out.print(eight.main);

                    }
                    case "calculator", "Calculator" -> {
                        System.out.println("What calculation do you want to do?");
                        String calcName = scan.nextLine();
                        int firstNumber = scan.nextInt();
                        int secondNumber = scan.nextInt();

                        switch (calcName) {
                            case "Help", "help" -> System.out.println("Calculations include addition, subtraction, multiplication, and division");
                            case "addition", "Addition" -> {
                                additionCalculator addition = new additionCalculator();
                                System.out.print(addition.solution(firstNumber, secondNumber));
                            }
                            case "Subtraction", "subtraction" -> {
                                subtractionCalculator subtraction = new subtractionCalculator();
                                System.out.print(subtraction.solution(firstNumber, secondNumber));
                            }
                            case "multiplication", "Multiplication" -> {
                                multiplicationCalculator multiplication = new multiplicationCalculator();
                                System.out.print(multiplication.solution(firstNumber, secondNumber));
                            }
                            case "division", "Division" -> {
                                divisionCalculator division = new divisionCalculator();
                                System.out.print(division.solution(firstNumber, secondNumber));
                            }
                            default -> System.out.print("Calculation is not recognized, make sure you spelled it correctly!");
                        }
                    }
                    default -> System.out.print("Input not recognized");
        }
    }
